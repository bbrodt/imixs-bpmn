<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension
         point="org.eclipse.bpmn2.modeler.runtime">
      <runtime
            class="org.imixs.bpmn.model.ImixsRuntimeExtension"
            description="Imixs-Workflow BPMN Runtime Extension"
            id="org.imixs.workflow.bpmn.runtime"
            name="Imixs-Workflow">
      </runtime>
      <model
            resourceFactory="org.imixs.bpmn.model.util.ModelResourceFactoryImpl"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            uri="http://www.imixs.org/bpmn2">
      </model>
      <!-- oder CustomElementFeatureContainer  MyTaskFeatureContainer 
       org.imixs.bpmn.propertytab.application org.imixs.bpmn.propertytab.mail
      -->
      <customTask
            category="Imixs-Workflow"
            description="Imixs Process Entity"
            featureContainer="org.imixs.bpmn.model.ImixsTaskFeatureContainer"
            icon="inbox.png"
            id="org.imixs.workflow.bpmn.ProcessEntityTask"
            name="Imixs Task"
            propertyTabs="org.imixs.bpmn.propertytab.mail org.imixs.bpmn.propertytab.summary org.imixs.bpmn.propertytab.application"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="Task">
         <property
               name="type"
               value="MyTask">
         </property>
         <property
               name="Imixs"
               value="Hello World">
         </property>
         <property
               label="Properties"
               name="taskConfig"
               type="TaskConfig">
         </property>
      </customTask>
		
      <propertyTab
            class="org.imixs.bpmn.properties.MailPropertySection"
            id="org.imixs.bpmn.propertytab.mail"
            label="Mail"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="org.eclipse.bpmn2.Task">
      </propertyTab>

      
      <propertyTab
            class="org.imixs.bpmn.properties.ProcessApplicationPropertySection"
            id="org.imixs.bpmn.propertytab.application"
            label="Application"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="org.eclipse.bpmn2.Task">
      </propertyTab>
        
	  <propertyTab
            class="org.imixs.bpmn.properties.ProcessSummaryPropertySection"
            id="org.imixs.bpmn.propertytab.summary"
            label="Summary"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="org.eclipse.bpmn2.Task">
      </propertyTab>
  <!--  -->
      
      <modelEnablement
            id="Imixs-BPMN2.modelEnablement2"
            profile="Full"
            ref="org.eclipse.bpmn2.modeler.runtime.none:Full"
            runtimeId="org.imixs.workflow.bpmn.runtime">
         <enable
               object="TaskConfig">
         </enable>
         <enable
               object="Parameter">               
         </enable>
         <!--
          <enable
               object="Task" feature="id">               
         </enable>
         -->
      </modelEnablement>
     
   </extension>
   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated imixs -->
      <package
            uri="http://www.imixs.org/bpmn2"
            class="org.imixs.bpmn.model.ModelPackage"
            genModel="model/imixs.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.extension_parser">
      <!-- @generated imixs -->
      <parser
            type="bpmn"
            class="org.imixs.bpmn.model.util.ModelResourceFactoryImpl"/>
   </extension>
</plugin>
