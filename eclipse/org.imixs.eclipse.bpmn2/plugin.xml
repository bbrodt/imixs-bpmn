<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension
         point="org.eclipse.bpmn2.modeler.runtime">
      <runtime
            class="org.imixs.bpmn.ImixsRuntimeExtension"
            description="Imixs-Workflow BPMN Runtime Extension"
            id="org.imixs.workflow.bpmn.runtime"
            name="Imixs-Workflow">
      </runtime>
      <model
            resourceFactory="org.imixs.bpmn.model.util.ModelResourceFactoryImpl"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            uri="http://www.imixs.org/bpmn2">
      </model>
      <!-- oder CustomElementFeatureContainer  MyTaskFeatureContainer 
       org.imixs.bpmn.propertytab.application org.imixs.bpmn.propertytab.mail
      -->
      <customTask
            category="Imixs-Workflow"
            description="Imixs Process Entity"
            featureContainer="org.imixs.bpmn.ImixsTaskFeatureContainer"
            icon="inbox.png"
            id="org.imixs.workflow.bpmn.ProcessEntityTask"
            name="Imixs Task"
            propertyTabs="org.imixs.bpmn.propertytab.summary org.imixs.bpmn.propertytab.application"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="Task">
         <property
               label="Process ID"
               name="processid"
               type="EInt"
               value="100">
         </property>
      </customTask>
      
      
       <customTask
             category="Imixs-Workflow"
             featureContainer="org.imixs.bpmn.ActivityEventDefinitionContainer"
             id="org.imixs.workflow.bpmn.ActivityEntityEvent"
             name="Imixs Activity"
             propertyTabs="org.imixs.bpmn.propertytab.mail "
             runtimeId="org.imixs.workflow.bpmn.runtime"
             type="IntermediateCatchEvent">
          <property
                name="activityid"
                type="EInt"
                value="10">
          </property>
            
      </customTask>
		
      <propertyTab
            class="org.imixs.bpmn.ui.activity.MailPropertySection"
            id="org.imixs.bpmn.propertytab.mail"
            label="Mail"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="org.eclipse.bpmn2.Task">
      </propertyTab>

      
      <propertyTab
            class="org.imixs.bpmn.ui.process.ProcessApplicationPropertySection"
            id="org.imixs.bpmn.propertytab.application"
            label="Application"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="org.eclipse.bpmn2.Task">
      </propertyTab>
        
	  <propertyTab
            class="org.imixs.bpmn.ui.process.ProcessSummaryPropertySection"
            id="org.imixs.bpmn.propertytab.summary"
            label="Summary"
            runtimeId="org.imixs.workflow.bpmn.runtime"
            type="org.eclipse.bpmn2.Task">
      </propertyTab>
  <!--  -->
      
      <modelEnablement
            id="Imixs-BPMN2.modelEnablement2"
            profile="Full"
            ref="org.eclipse.bpmn2.modeler.runtime.none:Full"
            runtimeId="org.imixs.workflow.bpmn.runtime">
         <enable
               object="Property">
         </enable>
         <!--
          <enable
               object="Task" feature="id">               
         </enable>
         -->
      </modelEnablement>
     
     
   </extension>
   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated imixs -->
      <package
            uri="http://www.imixs.org/bpmn2"
            class="org.imixs.bpmn.model.ModelPackage"
            genModel="model/imixs.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.extension_parser">
      <!-- @generated imixs -->
      <parser
            type="bpmn"
            class="org.imixs.bpmn.model.util.ModelResourceFactoryImpl"/>
   </extension>
</plugin>
